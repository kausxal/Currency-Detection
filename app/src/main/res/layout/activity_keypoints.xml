<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.ipcis.KeypointsActivity">
    <ImageView
        android:id="@+id/ivKeypoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:src="@drawable/mon6" />

    <TextView
        android:id="@+id/tvKeypoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ivKeypoint"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="46dp"
        android:text="Original Image" />

    <Button
        android:id="@+id/btnKeypoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignEnd="@+id/ivKeypoint"
        android:layout_below="@+id/ivKeypoint"
        android:layout_marginTop="26dp"
        android:text="Do processing-Keypoint Detection" />

</RelativeLayout>
